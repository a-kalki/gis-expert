{
  "name": "it-course-landing",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@happy-dom/global-registrator": "^18.0.1",
    "@playwright/test": "^1.55.1",
    "@types/bun": "latest",
    "dotenv-cli": "^10.0.0",
    "playwright": "^1.55.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "happy-dom": "^18.0.1",
    "libphonenumber-js": "^1.12.18",
    "openai": "^5.23.1"
  },
  "scripts": {
    "build:dev": "NODE_ENV=development bun run build.ts --dev",
    "build:prod": "NODE_ENV=production bun run build.ts --prod",
    "dev:server": "NODE_ENV=development bun --hot run src/api/server.ts",
    "start:dev": "bun run build:dev && bun run dev:server",
    "start:prod": "bun run build:prod && pm2 start ecosystem.config.cjs --env production",
    "test": "bun test",
    "test:ui": "bun test src/ui/**/*.test.ts",
    "test:api": "bun test src/api/**/*.test.ts",
    "test:domain": "bun test src/domain/**/*.test.ts",
    "test:watch": "bun test --watch",
    "test:e2e": "bun test test/e2e/form-submission.test.ts test/e2e/analytics.test.ts test/e2e/browser-form.test.ts test/e2e/chat.test.ts",
    "db:migrate": "bun run db-utils/run-migrations.ts",
    "prepare:context": "bun run scripts/prepare-ai-context.ts"
  }
}
