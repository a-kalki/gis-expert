{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@community/*": ["src/community/*"],
      "@course/*": ["src/course/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "build.ts", "db-utils/**/*.ts", "scripts/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}